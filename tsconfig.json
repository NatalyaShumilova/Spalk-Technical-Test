{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "*": ["*"]
    },
    "types": ["node"]
  },
  "include": ["src/*"],
  "exclude": ["node_modules"]
}
